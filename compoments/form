import React, { Component } from "react";

export default class NumbersSlider extends React.Component {
    state = {
        name: "Bob",
        age: "21",
        height: "180",
        check: false
    };

    Show = () => {
    }

    HandleNameInput = event => {
        this.setState({ name: event.target.value })
    };

    HandleAgeInput = event => {
        this.setState({ age: event.target.value })
    };
 
    HandleHeightInput = event => {
        this.setState({ height: event.target.value })
    };   

    HandleChecktInput = event => {
        this.setState({ check: event.target.value })
    };       


  render() {
    return (
      <div>
        Nome: <input name="name" onChange={this.HandleNameInput} />
        Idade: <input name="age" onChange={this.HandleAgeInput} />
        Altura: <input name="height" onChange={this.HandleHeightInput} /> <br />
        Mantenha me postado <input type="checkbox" onClick={this.HandleChecktInput} />

        <br />
        {this.state.name}
        <br />
        {this.state.age}
        <br />
        {this.state.height}
        <br />
        {this.state.check}
        <br />

        <button>Enviar!</button>
      </div>
    );
  }
}
